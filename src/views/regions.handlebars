{{!-- Vista de los selectores de regiones y comuna --}}

<div class="container">
  <h1 class="m-3 mt-5">Regiones de Chile</h1>

  <div>
    <select class="select-btn btn dropdown-toggle" onchange="regionSelected(value)" id="regionSelector">
      <option value="{{this.region}}">Seleccione una regi√≥n</option>
      {{#each regions}}
      <option class="dropdown-item" value="{{this.id}}">{{this.region}}</option>
      {{/each}}
    </select>

    <select class="select-btn btn dropdown-toggle" id="communeSelector">
      <option value="{{this.commune}}">Seleccione una comuna</option>
    </select>
  </div>
</div>

<script src="/js/selectors.js"></script>